---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const products = [
  { title: "Producto 1", description: "Descripción del producto 1", image: "/images/img1.jpg" },
  { title: "Producto 2", description: "Descripción del producto 2", image: "/images/img2.jpg" },
  { title: "Producto 3", description: "Descripción del producto 3", image: "/images/img3.jpg" },
];
---

<Layout title="Mi Tienda Online">
  <head>
    <link rel="stylesheet" href="/styles/global.css">
  </head>
  <h1 class="text-4xl font-bold text-center my-8">HEIN</h1>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    {products.map(product => (
      <Card {...product} />
    ))}
  </div>
</Layout>